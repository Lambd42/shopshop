{% extends "base.html.twig" %}
{% block title %}
    {{ parent() }}
    Add Review 
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row justify-content-center"> <div class="col-12 col-md-10">
        <h1 class="text-center">Add Review</h1> 
        
        <form method="post" action="index.php?page=createReview">

            <input style="display:none;" value="{{product.id}}" id="productID" name="productID">

            <div class="mb-3">
                <label for="note" class="form-label">Note :</label>
                <input name="note" class="form-control" id="note" type="number" min="1" max="5" value="5" required/>
            </div>

            <div class="mb-3">
                <label for="text" class="form-label">review :</label>
                <textarea name="text" class="form-control" id="text" rows=3 required></textarea>
            </div>


            <div style="text-align: center">
                <input name='button' type="submit" class="btn btn-outline-primary" value='Add review'/>
            </div>

            

        </form>

    </div>
</div> 
{% endblock %}