{% extends "base.html.twig" %}
{% block title %}
    {{ parent() }}
    Add Cart 
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row justify-content-center"> <div class="col-12 col-md-10">
        <h1 class="text-center">Add Cart</h1> 
        
        <form method="post" action="index.php?page=addCart">

            <div class="mb-3">
                <label for="user" class="form-label">User :</label>
                <select type="text" class="form-select" id="user" name="user" required>
                <option selected value="">-- select an email --</option>
                {% for user in users %}
                    <option value="{{user.email}}">
                        {{user.email}}
                    </option>
                {% endfor %}
                </select>
            </div>


            <div style="text-align: center">
                <input name='button' type="submit" class="btn btn-outline-primary" value='Create'/>
            </div>

            

        </form>

    </div>
</div> 
{% endblock %}